{
  "build": {
    "builder": "paketobuildpacks/builder:base",
    "buildCommand": "chmod +x ./mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -jar target/*.jar"
  },
  "variables": {
    "JAVA_HOME": "/opt/java/openjdk",
    "PATH": "/opt/java/openjdk/bin:$PATH"
  }
}
